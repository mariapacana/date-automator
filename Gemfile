source "https://rubygems.org"

# Facebook integration
gem 'mini_fb'
gem 'koala'

# Twilio integration
gem 'twilio-ruby'
gem 'localtunnel'

# Google integration
gem 'google-api-client'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

# Cross Origin Resource Sharing
gem 'sinatra-cross_origin'

# Authentication
gem 'bcrypt-ruby'

# For parsing the XML feed from Google Cotnacts
gem 'nokogiri'

gem 'activesupport'
gem 'activerecord'

gem 'shoulda-matchers'

gem 'rake'

gem 'shotgun'

gem 'rspec'
gem 'pry'

ruby '1.9.3'